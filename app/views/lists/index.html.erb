<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://picsum.photos/2000/300);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container">
    <div class="mt-5">
        <h1>Lists</h1>
    </div>
    <div class="row">
        <% @lists.each do |list| %>
            <div class="cards" style="width: 18rem;">
                <img src="https://picsum.photos/200/200" class="card-img-top" alt="...">
                <p class="card-text"><%= link_to list.name, list_path(list) %></p>
            </div>
        <% end %>
    </div>
    <div>
        <a class="btn btn-flat" href="#">Book now</a>
    </div>
</div>

<%= link_to "Add list", new_list_path %>

