<div class="container">
    <div class="mt-5">
        <h1>Lists</h1>
    </div>
    <div class="d-flex row">
        <% @lists.each do |list| %>
            <div class="cards grid" style="width: 18rem;">
                <%# <img src="https://picsum.photos/200/200" class="card-img-top" alt="..."> %>
                <% if list.photo.attached? %>
                <%= cl_image_tag (list.photo.key), class:"rounded-5 opacity-75 justify-content-center", height: 200, width: 200 %>
                <% end %>
                <div class="centered">
                    <%= link_to list.name, list_path(list) %>
                </div>
            </div>
        <% end %>
    </div>
    <div>
        <button type="button" class="btn btn-primary mt-3"><%= link_to "Add list", new_list_path %></button>
