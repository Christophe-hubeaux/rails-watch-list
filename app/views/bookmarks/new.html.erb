<div class="container">
  <div class="mt-3">
    <h2>Fill the bookmark form</h2>
  </div>
  <div>
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit %>
    <% end %>
  </div>
  <div>
    <button type="button" class="btn btn-primary mt-3"><%= link_to "Back", lists_path %></button>
  </div>
</div>

